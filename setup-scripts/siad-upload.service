[Unit]
Description=siad-upload

[Service]
Type=simple
WorkingDirectory=/home/user/siad-upload
EnvironmentFile=/home/user/.sia/sia-upload.env
ExecStart=/home/user/go/bin/siad --api-addr :9970 --rpc-addr localhost:9971 --host-addr localhost:9972 --siamux-addr localhost:9973 --disable-api-security
ExecStop=/home/user/go/bin/siac --addr localhost:9970 stop
Restart=on-failure
SyslogIdentifier=siad-upload
LimitNOFILE=10000

[Install]
WantedBy=default.target
